{
  "extends": ["airbnb", "next/core-web-vitals", "prettier"],

  "rules": {
    "react/jsx-filename-extension": [
      "warn",
      { "allow": "as-needed", "extensions": [".jsx", ".tsx"] }
    ],
    "react/jsx-no-duplicate-props": [0, { "ignoreCase": false }],
    "import/extensions": [
      2,
      "ignorePackages",
      {
        "js": "never",
        "mjs": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["@", "./src"]],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
